{
  "name": "boilerplate-nuxt",
  "version": "0.0.0",
  "description": "My pioneering Nuxt.js project",
  "author": "Alan Timossi Farias de Oliveira",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
    "build": "nuxt build",
    "start": "cross-env NODE_ENV=production node server/index.js",
    "generate": "nuxt generate",
    "deploy": "cross-env DEPLOY_ENV=GH_PAGES nuxt generate && git subtree push --prefix dist origin gh-pages",
    "lint": "yarn lint:scss && yarn lint:js",
    "lint:js": "eslint . --ext .js,.vue --ignore-path .gitignore .",
    "lint:scss": "stylelint './**/*.scss' --syntax scss",
    "lint:fix": "yarn lint:scss:fix && yarn lint:js:fix",
    "lint:js:fix": "yarn lint:js -- --fix",
    "lint:scss:fix": "yarn lint:scss -- --fix",
    "styleguide": "vue-styleguidist server",
    "styleguide:build": "vue-styleguidist build",
    "test": "jest",
    "test:watch": "jest --watchAll --verbose"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "yarn --silent lint:js:fix",
      "git add"
    ],
    "*.scss": [
      "yarn --silent lint:scss:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/pwa": "^3.0.0-0",
    "@nuxtjs/style-resources": "^1.0.0",
    "express": "^4.16.4",
    "nuxt": "^2.0.0"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^1.0.1",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "cross-env": "^5.2.0",
    "css-loader": "^3.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^2.6.0",
    "jest": "^24.1.0",
    "lint-staged": "^8.2.1",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "prettier": "^1.16.4",
    "push-dir": "^0.4.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-recommended-scss": "^4.0.0",
    "stylelint-scss": "^3.11.1",
    "vue-jest": "^4.0.0-0",
    "vue-styleguidist": "^3.25.0"
  }
}
